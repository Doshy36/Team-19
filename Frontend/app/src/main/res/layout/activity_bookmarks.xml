<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:contentDescription="Back Button"
        android:background="?android:attr/selectableItemBackground"
        android:elevation="1dp"
        android:onClick="onBackButtonOnClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_chevron_left_black_24dp"
        android:focusable="true" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorMainMenuBG"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/bookmarksTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_bookmarks"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_light_pressed"
            android:textSize="48sp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/heritageButtonImage"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:elevation="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_buttonimagevector2" />

                <ImageView
                    android:id="@+id/cultureButtonImage"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:elevation="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_buttonimagevector3" />

                <ImageView
                    android:id="@+id/cuisineButtonImage"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_buttonimagevector4" />

                <ImageView
                    android:id="@+id/sportsButtonImage"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:src="@drawable/ic_buttonimagevector1" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>